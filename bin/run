#!/bin/bash
# Run the project for development.

ROOT="$( cd $(dirname $0)/..; pwd )"
source "$ROOT/bin/util.sh"

check "cargo" && \
check "termite" && \
  # cargo $cmd
  termite -e "bash -c 'cargo +nightly-2019-03-01 run \"$*\" --features amethyst/nightly || (echo -e \"----------\n[CONTINUE]\"; read')" & \
    disown
